---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="zh-CN">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="一个个人项目导航页" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<style>
            /* 预设主题 1: 赛博朋克 */
            :root {
                --bg-color: #0d0c1d;
                --text-color: #b0a8d7;
                --card-bg: #1f1d33;
                --card-border: #8d4aab;
                --accent-color: #f400a1;
                --tag-bg: #4a4863;
                --tag-text: #e0ddee;
                --font-family: 'Courier New', Courier, monospace;
            }
            
            /* 预设主题 2: 极简白 (取消下方注释以启用) */
            /*
            :root {
                --bg-color: #f5f5f5;
                --text-color: #333333;
                --card-bg: #ffffff;
                --card-border: #e0e0e0;
                --accent-color: #007bff;
                --tag-bg: #e9e9e9;
                --tag-text: #555555;
                --font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
            }
            */

			body {
				background-color: var(--bg-color);
				color: var(--text-color);
				font-family: var(--font-family);
				margin: 0;
				padding: 2rem;
				line-height: 1.6;
                transition: background-color 0.3s, color 0.3s;
			}
			main {
				max-width: 800px;
				margin: auto;
			}
            header {
                display: flex;
                align-items: center;
                gap: 1.5rem;
                margin-bottom: 3rem;
            }
            header img {
                width: 80px;
                height: 80px;
                border-radius: 50%;
                border: 2px solid var(--accent-color);
                padding: 3px;
            }
            h1 {
                color: var(--accent-color);
                font-size: 2rem;
                margin: 0;
            }
            header p {
                margin: 0;
                font-size: 1rem;
                opacity: 0.8;
            }
            .project-grid {
                display: grid;
                grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
                gap: 1.5rem;
            }
		</style>
	</head>
	<body>
		<main>
            <slot />
        </main>
	</body>
</html>