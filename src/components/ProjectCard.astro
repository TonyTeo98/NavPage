---
export interface Props {
	title: string;
	description: string;
	tags: string[];
	liveUrl?: string;
	repoUrl?: string;
	animationDelay: number;
}

const { title, description, tags, liveUrl, repoUrl, animationDelay } = Astro.props;
---

<a href={liveUrl ?? repoUrl ?? '#'} target="_blank" rel="noopener noreferrer" class="card-link">
	<div class="card" style={`animation-delay: ${animationDelay}ms;`}>
		<header class="card-header">
			<i class="icon fa-solid fa-layer-group"></i>
			<span class="title">{title}</span>
		</header>
		<p class="description">{description}</p>
		<footer class="card-footer">
			<ul class="tags-list">
				{tags.slice(0, 3).map(tag => <li>{tag}</li>)}
			</ul>
		</footer>
	</div>
</a>

<style>
	.card-link {
		text-decoration: none;
		color: inherit;
		display: block;
		height: 100%;
	}

	.card {
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		background-color: var(--bg-card);
		padding: 1.5rem;
		border-radius: var(--border-radius);
		border: 1px solid var(--border-color);
		box-shadow: 0 4px 6px var(--shadow-color);
		transition: var(--transition-speed);
		height: 100%;
		
		/* Animation */
		opacity: 0;
		transform: translateY(10px);
		animation: fadeIn 0.4s ease-out forwards;
	}

	@keyframes fadeIn {
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.card-link:hover .card {
		transform: translateY(-5px);
		box-shadow: 0 7px 15px rgba(0, 0, 0, 0.08);
		border-color: var(--accent-color);
	}
	
	.card-header {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		margin-bottom: 1rem;
	}

	.icon {
		color: var(--accent-color);
		font-size: 1.25rem;
	}

	.title {
		font-size: 1.1rem;
		font-weight: 600;
		color: var(--text-primary);
	}

	.description {
		font-size: 0.95rem;
		color: var(--text-secondary);
		flex-grow: 1;
		line-height: 1.5;
	}
	
	.card-footer {
		margin-top: 1.25rem;
	}
	
	.tags-list {
		display: flex;
		flex-wrap: wrap;
		list-style: none;
		gap: 0.5rem;
	}

	.tags-list li {
		font-size: 0.75rem;
		color: var(--accent-color);
		background-color: #eafaf1;
		padding: 0.25rem 0.75rem;
		border-radius: 999px;
	}
</style>
