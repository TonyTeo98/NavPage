---
export interface Props {
	title: string;
	description: string;
	tags: string[];
	liveUrl?: string;
	repoUrl?: string;
	animationDelay: number;
}

const { title, description, tags, liveUrl, repoUrl, animationDelay } = Astro.props;
---

<div class="card" style={`animation-delay: ${animationDelay}ms;`}>
	<div class="card-content">
		<header class="card-header">
			<div class="folder-icon">
				<i class="fa-regular fa-folder"></i>
			</div>
			<div class="links">
				{repoUrl && repoUrl !== "#" && (
					<a href={repoUrl} target="_blank" rel="noopener noreferrer" aria-label="GitHub Repository">
						<i class="fa-brands fa-github"></i>
					</a>
				)}
				{liveUrl && liveUrl !== "#" && (
					<a href={liveUrl} target="_blank" rel="noopener noreferrer" aria-label="Live Demo">
						<i class="fa-solid fa-arrow-up-right-from-square"></i>
					</a>
				)}
			</div>
		</header>
		<h3 class="card-title">{title}</h3>
		<p class="card-description">{description}</p>
	</div>
	<footer class="card-footer">
		<ul class="tags-list">
			{tags.map(tag => <li>{tag}</li>)}
		</ul>
	</footer>
</div>

<style>
	.card {
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		background-color: var(--bg-light-navy);
		padding: 2rem;
		border-radius: var(--border-radius);
		transition: var(--transition-speed);
		box-shadow: 0 10px 30px -15px var(--shadow-navy);
		height: 100%;

		/* Animation */
		opacity: 0;
		transform: translateY(20px);
		animation: fadeIn 0.5s ease-out forwards;
	}

	@keyframes fadeIn {
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.card:hover {
		transform: translateY(-7px);
		box-shadow: 0 20px 30px -15px var(--shadow-navy);
	}
	
	.card-content {
		display: flex;
		flex-direction: column;
		flex-grow: 1;
	}

	.card-header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin-bottom: 25px;
	}

	.folder-icon i {
		color: var(--accent-green);
		font-size: 2.5rem; /* 40px */
	}

	.links a {
		color: var(--text-light-slate);
		padding: 5px;
		margin-left: 10px;
		font-size: 1.25rem; /* 20px */
	}

	.links a:hover {
		color: var(--accent-green);
	}

	.card-title {
		font-size: 1.3rem;
		margin-bottom: 10px;
	}
	.card-title:hover {
		color: var(--accent-green);
	}

	.card-description {
		font-size: 1rem;
		flex-grow: 1;
	}
	
	.card-footer {
		margin-top: 20px;
	}
	
	.tags-list {
		display: flex;
		flex-wrap: wrap;
		list-style: none;
		gap: 10px;
		font-family: var(--font-mono);
		font-size: 0.8rem;
		color: var(--text-light-slate);
	}
</style>
